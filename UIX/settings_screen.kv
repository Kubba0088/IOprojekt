<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20

        Label:
            text: "Ustawienia"
            font_size: 28
            bold: True
            color: (0.1, 0.6, 0.8, 1)
            size_hint_y: None
            height: 50

        BoxLayout:
            orientation: 'vertical'
            spacing: 10

            Label:
                text: "Język:"
                font_size: 18

            Spinner:
                id: language_spinner
                text: "polski"
                values: ["polski", "angielski"]

            Label:
                text: "Format zapisu:"
                font_size: 18

            Spinner:
                id: format_spinner
                text: "txt"
                values: ["txt", "docx", "pdf"]

            Label:
                text: "Maksymalne miejsce (MB):"
                font_size: 18

            TextInput:
                id: max_space_input
                text: "100"
                multiline: False

            Label:
                text: "Jakość nagrania:"
                font_size: 18

            Spinner:
                id: quality_spinner
                text: "wysoka"
                values: ["niska", "średnia", "wysoka"]

        Button:
            text: "Zapisz Ustawienia"
            font_size: 20
            background_color: (0.2, 0.6, 0.2, 1)
            color: (1, 1, 1, 1)
            size_hint_y: None
            height: 60
            on_release: root.save_settings()

        Button:
            text: "Powrót"
            font_size: 20
            background_color: (0.8, 0.2, 0.2, 1)
            color: (1, 1, 1, 1)
            size_hint_y: None
            height: 60
            on_release: app.root.current = 'main'