<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20

        Label:
            text: "Ustawienia"
            font_size: 32
            bold: True
            color: (0.1, 0.6, 0.8, 1)
            size_hint_y: None
            height: 60

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 50

            Label:
                text: "Język Transkrypcji:"
                font_size: 18
                size_hint_x: 0.5

            Spinner:
                id: language_spinner
                text: "Polski"
                values: ["Polski", "Angielski"]
                font_size: 16
                size_hint_x: 0.5
                background_color: (0.8, 0.8, 0.8, 1)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 50

            Label:
                text: "Format Zapisów:"
                font_size: 18
                size_hint_x: 0.5

            Spinner:
                id: format_spinner
                text: "PDF"
                values: ["PDF", "TXT"]
                font_size: 16
                size_hint_x: 0.5
                background_color: (0.8, 0.8, 0.8, 1)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 50

            Label:
                text: "Max miejsce (MB):"
                font_size: 18
                size_hint_x: 0.5

            TextInput:
                id: max_space_input
                text: "500"
                font_size: 16
                multiline: False
                input_filter: "int"
                size_hint_x: 0.5
                background_color: (0.9, 0.9, 0.9, 1)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 50

            Label:
                text: "Jakość Nagrania:"
                font_size: 18
                size_hint_x: 0.5

            Spinner:
                id: quality_spinner
                text: "Wysoka"
                values: ["Niska", "Średnia", "Wysoka"]
                font_size: 16
                size_hint_x: 0.5
                background_color: (0.8, 0.8, 0.8, 1)

        Button:
            text: "Zapisz Ustawienia"
            font_size: 20
            background_color: (0.2, 0.6, 0.2, 1)
            color: (1, 1, 1, 1)
            size_hint_y: None
            height: 60
            on_release: root.save_settings()

        Button:
            text: "Powrót"
            font_size: 20
            background_color: (0.8, 0.2, 0.2, 1)
            color: (1, 1, 1, 1)
            size_hint_y: None
            height: 60
            on_release: app.root.current = 'main'
