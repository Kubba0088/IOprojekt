<TranscriptionScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 70, 50, 50]
        spacing: 30

        Label:
            text: "Podgląd Transkrypcji"
            font_size: 32
            bold: True
            color: (0.8, 0.8, 0.8, 1)
            size_hint_y: None
            height: 60

        TextInput:
            id: transcription_view
            text: root.transcription_text
            font_size: 18
            multiline: True
            readonly: True
            background_color: (0.15, 0.15, 0.15, 1)
            foreground_color: (1, 1, 1, 1)
            size_hint_y: 0.6

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 80
            spacing: 20

            Button:
                text: "Powrót"
                font_size: 22
                color: (1, 1, 1, 1)
                size_hint_x: 0.3
                on_release: app.root.current = 'main'
                canvas.before:
                    Color:
                        rgba: (0.2, 0.2, 0.2, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

            Button:
                text: "Wykonaj OCR"
                font_size: 22
                color: (1, 1, 1, 1)
                size_hint_x: 0.3
                on_release:
                    app.root.get_screen('main').start_ocr()
                canvas.before:
                    Color:
                        rgba: (0.3, 0.3, 0.3, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

            Button:
                text: "Stop OCR"
                font_size: 22
                color: (1, 1, 1, 1)
                size_hint_x: 0.3
                on_release:
                    app.root.get_screen('main').stop_ocr()
                canvas.before:
                    Color:
                        rgba: (0.2, 0.2, 0.2, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
